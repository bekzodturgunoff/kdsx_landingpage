---
import { createT, DEFAULT_LANGUAGE } from "../i18n/index";
// TODO: Replace DEFAULT_LANGUAGE with runtime locale resolution (cookie, param, header)
const lang = DEFAULT_LANGUAGE;
const t = createT(lang);
---
<section class="relative w-full px-2 sm:px-5 pb-10 pt-6 sm:py-10">
  <div class="absolute inset-0 -z-10 bg-gradient-to-b from-transparent via-brand-cta/10 to-transparent opacity-50"></div>
  <div class="max-w-6xl mx-auto section-shell px-4 sm:px-8 md:px-10 pb-10 pt-6 sm:py-14 md:py-16">
    <div class="flex flex-col items-center gap-8 sm:gap-12">
      <!-- Visual -->
      <div class="relative flex w-full items-center justify-center">
        <div class="absolute inset-0 -z-10 rounded-[36px] bg-gradient-to-br from-brand-cta/12 via-white/25 to-transparent blur-3xl"></div>
        <img
          loading="lazy"
          src="/app_images/TABLE_MOCKUP_POS_MENU_VIEW.png"
          alt="Immersive tabletop POS experience presenting curated menu pathways"
          class="relative w-full max-w-[1100px] rounded-[28px]"
        />
      </div>

      <!-- Copy -->
      <div class="flex w-full flex-col items-center text-center">
  <span class="badge-pill mb-3 sm:mb-5">{t('heroBadge')}</span>
  <h1 class="max-w-4xl text-4xl sm:text-5xl md:text-6xl font-semibold tracking-tight leading-[1.1] sm:leading-[1.05] text-brand-text dark:text-brand-text-dark">{t('heroHeading')}</h1>
  <p class="mt-4 sm:mt-5 max-w-3xl text-base sm:text-lg leading-relaxed text-brand-text/80 dark:text-brand-text-dark/75">{t('heroBody')}</p>

        <div class="mt-6 sm:mt-8 flex flex-col sm:flex-row justify-center sm:items-center sm:gap-4 gap-3 w-full sm:w-auto px-2 sm:px-0">
          <button data-plan-trigger="starter" class="inline-flex items-center justify-center rounded-full bg-brand-cta px-6 sm:px-7 py-3 sm:py-3.5 text-sm sm:text-base font-semibold text-brand-cta-text dark:text-brand-cta-text shadow-[0_18px_36px_-22px_rgba(26,77,26,0.55)] transition-transform duration-300 hover:scale-[1.02]">
            <span>{t('pricingStarterCta')}</span>
          </button>
        </div>

        <dl class="mt-8 sm:mt-12 grid gap-3 sm:gap-4 w-full max-w-4xl sm:grid-cols-3 px-2 sm:px-0">
          <div class="surface-card p-4 sm:p-5 text-left text-brand-text dark:text-brand-text-dark">
            <dt class="text-xs font-semibold uppercase tracking-[0.35em] text-brand-cta-text dark:text-brand-cta">{t('heroMetricDowntimeTitle')}</dt>
            <dd class="mt-3 sm:mt-4 text-2xl sm:text-3xl font-bold">-32%</dd>
            <p class="mt-2 text-xs sm:text-sm text-brand-text/70 dark:text-brand-text-dark/70 leading-relaxed">{t('heroMetricDowntimeCopy')}</p>
          </div>
          <div class="surface-card p-4 sm:p-5 text-left text-brand-text dark:text-brand-text-dark">
            <dt class="text-xs font-semibold uppercase tracking-[0.35em] text-brand-cta-text dark:text-brand-cta">{t('heroMetricInventoryTitle')}</dt>
            <dd class="mt-3 sm:mt-4 text-2xl sm:text-3xl font-bold">98.4%</dd>
            <p class="mt-2 text-xs sm:text-sm text-brand-text/70 dark:text-brand-text-dark/70 leading-relaxed">{t('heroMetricInventoryCopy')}</p>
          </div>
          <div class="surface-card p-4 sm:p-5 text-left text-brand-text dark:text-brand-text-dark">
            <dt class="text-xs font-semibold uppercase tracking-[0.35em] text-brand-cta-text dark:text-brand-cta">{t('heroMetricRoiTitle')}</dt>
            <dd class="mt-3 sm:mt-4 text-2xl sm:text-3xl font-bold">90 days</dd>
            <p class="mt-2 text-xs sm:text-sm text-brand-text/70 dark:text-brand-text-dark/70 leading-relaxed">{t('heroMetricRoiCopy')}</p>
          </div>
        </dl>
      </div>
    </div>
  </div>
</section>
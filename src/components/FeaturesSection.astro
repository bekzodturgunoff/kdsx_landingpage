<section id="features" class="w-full py-20 bg-brand-bg dark:bg-brand-bg-dark">
  <div class="max-w-6xl mx-auto px-4 text-center">
    <h2 class="text-[48px] font-normal tracking-tight mb-6 text-brand-text dark:text-brand-text-dark leading-tight">Cutting-Edge Features</h2>
    <p class="text-xl text-brand-text dark:text-brand-text-dark opacity-75 mb-16 max-w-3xl mx-auto leading-relaxed">Easily track spending, manage budgets, and reach financial goals</p>
    
    <div class="space-y-8">
      <!-- First row: 3 images -->
      <div class="grid md:grid-cols-3 gap-8">
        <div class="flex justify-center">
          <img loading="lazy" src="/app_images/dash_app.png" alt="Dashboard App" class="w-full max-w-md h-auto object-cover rounded-2xl shadow-xl bg-transparent" />
        </div>
        <div class="flex justify-center">
          <img loading="lazy" src="/app_images/pos_app_1.png" alt="POS App" class="w-full max-w-md h-auto object-cover rounded-2xl shadow-xl bg-transparent" />
        </div>
        <div class="flex justify-center">
          <img loading="lazy" src="/app_images/kitchen_aop.png" alt="Kitchen App" class="w-full max-w-md h-auto object-cover rounded-2xl shadow-xl bg-transparent" />
        </div>
      </div>
      <!-- Second row: 2 images -->
      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <div class="flex justify-center">
          <img loading="lazy" src="/app_images/pos_app_2.png" alt="POS App 2" class="w-full max-w-md h-auto object-cover rounded-2xl shadow-xl bg-transparent" />
        </div>
        <div class="flex justify-center">
          <img loading="lazy" src="/app_images/pos_app_3.png" alt="POS App 3" class="w-full max-w-md h-auto object-cover rounded-2xl shadow-xl bg-transparent" />
        </div>
      </div>
    </div>
  </div>
</section>

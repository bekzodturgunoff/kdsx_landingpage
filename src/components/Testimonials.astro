<section class="w-full px-4 sm:px-6 pb-24">
  <div class="max-w-6xl mx-auto section-shell px-6 sm:px-10 py-16">
    <div class="max-w-6xl mx-auto px-4 text-center">
      <span class="badge-pill" data-i18n="testimonials.badge">From our users</span>

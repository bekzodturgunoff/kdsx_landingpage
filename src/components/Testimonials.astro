<section class="w-full py-20 bg-brand-bg dark:bg-brand-bg-dark">
  <div class="max-w-6xl mx-auto px-4 text-center">
    <h2 class="text-[48px] font-normal tracking-tight mb-4 text-brand-text dark:text-brand-text-dark leading-tight">From our users</h2>
    <p class="text-xl text-brand-text dark:text-brand-text-dark opacity-75 mb-16 leading-relaxed">What our users are saying</p>
    
    <div class="relative max-w-2xl mx-auto">
      <div class="testimonial-container overflow-hidden">
        <div class="testimonial-slider flex transition-transform duration-500 ease-in-out" id="testimonial-slider">
          <!-- Testimonial 1 -->
          <div class="testimonial-slide w-full flex-shrink-0 text-left">
            <blockquote class="text-[28px] font-bold text-brand-text dark:text-brand-text-dark mb-8 leading-relaxed">
              "KDSX has completely transformed how I handle my finances. It's intuitive, powerful, and efficient. KDSX became a lifesaver for me."
            </blockquote>
            <p class="text-base text-brand-text dark:text-brand-text-dark opacity-60">By Farida Orujova</p>
          </div>
          
          <!-- Testimonial 2 -->
          <div class="testimonial-slide w-full flex-shrink-0 text-left">
            <blockquote class="text-[28px] font-bold text-brand-text dark:text-brand-text-dark mb-8 leading-relaxed">
              "The best financial management tool I've ever used. Simple, clean, and incredibly effective for tracking expenses."
            </blockquote>
            <p class="text-base text-brand-text dark:text-brand-text-dark opacity-60">By Ahmed Hassan</p>
          </div>
          
          <!-- Testimonial 3 -->
          <div class="testimonial-slide w-full flex-shrink-0 text-left">
            <blockquote class="text-[28px] font-bold text-brand-text dark:text-brand-text-dark mb-8 leading-relaxed">
              "KDSX streamlined our entire restaurant operation. From inventory to sales tracking, everything is now seamless."
            </blockquote>
            <p class="text-base text-brand-text dark:text-brand-text-dark opacity-60">By Maria Rodriguez</p>
          </div>
          
          <!-- Testimonial 4 -->
          <div class="testimonial-slide w-full flex-shrink-0 text-left">
            <blockquote class="text-[28px] font-bold text-brand-text dark:text-brand-text-dark mb-8 leading-relaxed">
              "Finally, a POS system that actually makes sense. Our staff learned it in minutes, not hours."
            </blockquote>
            <p class="text-base text-brand-text dark:text-brand-text-dark opacity-60">By David Chen</p>
          </div>
          
          <!-- Testimonial 5 -->
          <div class="testimonial-slide w-full flex-shrink-0 text-left">
            <blockquote class="text-[28px] font-bold text-brand-text dark:text-brand-text-dark mb-8 leading-relaxed">
              "The reporting features are incredible. I can see exactly where my money goes and make better business decisions."
            </blockquote>
            <p class="text-base text-brand-text dark:text-brand-text-dark opacity-60">By Sarah Johnson</p>
          </div>
        </div>
      </div>
      
      <!-- Arrow button positioned outside -->
      <button 
        id="next-testimonial" 
        class="absolute -right-16 top-1/2 -translate-y-1/2 p-3 rounded-full bg-brand-cta text-brand-cta-text shadow-lg transition-transform duration-300 hover:scale-105"
        aria-label="Next testimonial"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path d="M9 18l6-6-6-6" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
  </div>
</section>

<script is:inline>
  (function setupTestimonials() {
    const slider = document.getElementById('testimonial-slider');
    const nextBtn = document.getElementById('next-testimonial');
    let currentIndex = 0;
    const totalSlides = 5;
    
    if (!slider || !nextBtn) return;
    
    function showTestimonial(index) {
      const translateX = -index * 100;
      slider.style.transform = `translateX(${translateX}%)`;
    }
    
    nextBtn.addEventListener('click', () => {
      currentIndex = (currentIndex + 1) % totalSlides;
      showTestimonial(currentIndex);
    });
    
    // Initialize
    showTestimonial(0);
  })();
</script>

<style>
  .animate-marquee {
    animation: marquee 15s linear infinite;
    display: flex;
  }
  
  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-33.333%);
    }
  }
</style>

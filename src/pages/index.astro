---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import ThreePillars from '../components/ThreePillars.astro';
import FeatureGrid from '../components/FeatureGrid.astro';
import PricingTable from '../components/PricingTable.astro';
---

<Layout>
  <Header />
  <main class="space-y-0">
    <Hero />
    <ThreePillars />
    <FeatureGrid />
    <PricingTable />
</main>

<section id="contact" class="w-full py-20 bg-brand-bg dark:bg-brand-bg-dark flex flex-col items-center">
  <h2 class="text-3xl md:text-4xl font-extrabold tracking-tight text-brand-text dark:text-brand-text-dark mb-6">Contact Us</h2>
  <p class="text-base md:text-lg text-brand-text dark:text-brand-text-dark mb-10 opacity-90">Have questions or want a demo? Reach out and our team will get back to you fast.</p>
  <form class="w-full max-w-md flex flex-col gap-4" name="contact" method="POST" data-netlify="true">
    <input type="hidden" name="form-name" value="contact" />
    <input type="text" name="name" required placeholder="Your Name" class="px-4 py-3 rounded-lg border border-brand-cta-text dark:border-brand-cta-text-dark bg-transparent text-brand-text dark:text-brand-text-dark focus:outline-none focus:ring-2 focus:ring-brand-cta dark:focus:ring-brand-cta-dark" />
    <input type="email" name="email" required placeholder="Your Email" class="px-4 py-3 rounded-lg border border-brand-cta-text dark:border-brand-cta-text-dark bg-transparent text-brand-text dark:text-brand-text-dark focus:outline-none focus:ring-2 focus:ring-brand-cta dark:focus:ring-brand-cta-dark" />
    <textarea name="message" required placeholder="How can we help you?" rows="4" class="px-4 py-3 rounded-lg border border-brand-cta-text dark:border-brand-cta-text-dark bg-transparent text-brand-text dark:text-brand-text-dark focus:outline-none focus:ring-2 focus:ring-brand-cta dark:focus:ring-brand-cta-dark"></textarea>
    <button type="submit" class="mt-2 px-8 py-4 rounded-full text-lg font-semibold bg-brand-cta dark:bg-brand-cta-dark text-brand-cta-text dark:text-brand-cta-text-dark shadow-lg hover:brightness-110 transition-all">Send Message</button>
  </form>
</section>
</Layout>

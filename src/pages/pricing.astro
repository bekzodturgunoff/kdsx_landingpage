---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import PricingTable from '../components/PricingTable.astro';
import FAQ from '../components/FAQ.astro';
// (Reverted) remove SSR page-level translations
---

<Layout>
  <Header />
  <main class="space-y-0">
    <section class="w-full px-2 sm:px-6 py-12 sm:py-20">
      <div class="max-w-5xl mx-auto section-shell px-4 py-10 md:px-10 md:py-16 text-brand-text dark:text-brand-text-dark">
  <span class="badge-pill" data-i18n="pricingPageBadge">Plans</span>
  <h1 class="mt-4 text-3xl sm:text-4xl md:text-5xl font-semibold tracking-tight" data-i18n="pricingPageHeading">Pricing shaped around the way your team runs</h1>
  <p class="mt-4 text-base sm:text-lg leading-relaxed text-brand-text/75 dark:text-brand-text-dark/70" data-i18n="pricingPageLead">Compare bundles, add-ons, and rollout support. Every tier includes onboarding, 24/7 coverage, and full access to the wizard for tailored setups.</p>
      </div>
    </section>
    <PricingTable>
      <Fragment slot="faq">
        <FAQ />
      </Fragment>
    </PricingTable>
  </main>
</Layout>
